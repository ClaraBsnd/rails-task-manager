<div class="content">
  <h1>All the tasks</h1>

  <ul class="list-unstyled">
    <% @tasks.each do |task| %>
    <li><%= check_box_tag 'completed', task.id, task.completed,
          data: {
            remote: true,
            method: "POST"
          } %><%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task),
        method: "DELETE",
        data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>

  <%= link_to "Add a new task", new_task_path %>
</div>


